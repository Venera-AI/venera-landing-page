---
import { Image } from 'astro:assets';
import logo from '@/images/logo.png';
import aboutBg from '@/images/about-background.png';
import professionals from '@/images/professionals.png';
import patients from '@/images/patients.png';
import publicSector from '@/images/public-sector.png';
import feature1 from '@/images/feature-1.png';
import feature2 from '@/images/feature-2.png';
import feature3 from '@/images/feature-3.png';
import aiAssistantFeatures from '@/images/assistant-features.png';
import contactBg from '@/images/contact.svg';
import { ContactForm } from '@/components/ContactForm';
import { MobileMenu } from '@/components/MobileMenu';

import '@/styles/globals.css';
import MenuItems from '@/components/MenuItems.astro';
import {
  ChartNoAxesCombined,
  Contact,
  Flag,
  Folder,
  Mail,
  MapPinHouse,
  Plus,
  Settings,
} from 'lucide-react';
import SectionHeader from '@/components/SectionHeader.astro';
import Section from '@/components/Section.astro';
import Feature1Content from '@/components/Feature1Content.astro';
import Feature3Content from '@/components/Feature3Content.astro';
import { Progress } from '@/components/ui/progress';
import Teams from '@/components/Teams.astro';

const leftNavs = [
  {
    label: 'services',
    href: '/#services',
  },
  {
    label: 'features',
    href: '/#features',
  },
];
const rightNavs = [
  {
    label: 'about us',
    href: '/#about-us',
  },
  {
    label: 'contact',
    href: '/#contact',
  },
];

const mainNavs = [
  {
    label: 'homepage',
    href: '/',
  },
  ...leftNavs,
  ...rightNavs,
];

const audiences = [
  {
    icon: professionals,
    bg: 'bg-[#FFF1F2]',
    borderColor: 'border-[#FB7185]',
    title: 'Professionals',
    description:
      'We reduce workload and leverage information resource, increasing the effectiveness of the diagnosis process.',
  },
  {
    icon: patients,
    bg: 'bg-[#EFF6FF]',
    borderColor: 'border-[#60A5FA]',
    title: 'Patients',
    description:
      'We manage electronic health records and provide personalized insights.',
  },
  {
    icon: publicSector,
    bg: 'bg-[#FAF5FF]',
    borderColor: 'border-[#A855F7]',
    title: 'Public Sector',
    description:
      'We detect anomalies in public health and track down the root cause.',
  },
];

const features = [
  {
    image: feature1,
    title: 'Medical AI Dashboard',
    subtitle:
      'Web application to automate medical data processing and medical insights extracting.',
    content: Feature1Content,
  },
  {
    image: feature2,
    title: 'Electronic Health Companion',
    subtitle:
      'Mobile application to standardize and manage your electronic health record and personalize healthcare experience.',
  },
  {
    image: feature3,
    title: 'Public Health Monitor',
    subtitle:
      'Command center dashboard to detect anomalies and track down root cause.',
    content: Feature3Content,
  },
];

const assistantFeatures = [
  {
    icon: Plus,
    title: 'Empathetic Interaction',
    desscription:
      'Engage in natural and informative conversations with our AI Health Assistant. Ask questions about your health.',
  },
  {
    icon: Settings,
    title: 'Natural Language Understanding',
    desscription:
      'Engage in natural and informative conversations with the AI Health Assistant, making it easy.',
  },
  {
    icon: ChartNoAxesCombined,
    title: 'Proactive Health Insights',
    desscription:
      'Benefit from proactive health insights derived from AI-driven predictive analytics  every single day.',
