              {
                mainNavs.map((item) => {
                  if (item.href === '/') {
                    return (
                      <li class='text-white'>
                        <span>&#8729; </span>
                        <a href={item.href}>{item.label} </a>
                      </li>
                    );
                  }
                  return (
                    <li class='hover:text-white'>
                      <a href={item.href}>{item.label} </a>
                    </li>
                  );
                })
              }
            </ul>
          </div>
        </div>
        <div class='relative font-thin md:block hidden'>
          <div class='absolute top-0 left-0 w-60 text-lg'>
            <div class='flex items-center justify-start gap-x-2 font-bold mb-3'>
              <Flag />
              <p>Our Mission</p>
            </div>
            <p>
              Venera AI is an end-to-end modernized software solution to improve
              healthcare system.
            </p>
          </div>
          <div class='absolute bottom-0 left-0 w-60 text-lg'>
            <div class='flex items-center justify-start gap-x-2 font-bold mb-3'>
              <Mail />
              <p>Our Contact Info</p>
            </div>
            <div>
              <p>4008 Murray Ave,</p>
              <p>Pittsburgh, PA</p>
              <p>+541-908-9436</p>
            </div>
          </div>
          <div class='absolute bottom-1/2 right-0 w-60 text-lg'>
            <div class='flex items-center justify-start gap-x-2 font-bold mb-3'>
              <Folder />
              <p>Our Resources</p>
            </div>
            <ul>
              <li><a href='/'>Blog Posts</a></li>
              <li><a href='/'>Whitepapers</a></li>
            </ul>
          </div>
        </div>
      </div>
      <p class='absolute bottom-8 left-8'>
        Â© 2024 SafeRX / Venera AI | VIAI | All rights reserved
      </p>
    </header>
    <section class='h-screen relative'>
      <Image src={aboutBg} alt='random' class='absolute bottom-0 left-0' />
      <Image
        src={aboutBg}
        alt='random'
        class='absolute top-0 right-0 rotate-180'
      />
      <div
        class='container absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2'
      >
        <h3
          class='font-extrabold text-7xl sm:text-9xl text-center sm:text-left'
        >
          Health <span class='text-primary'>.</span>
        </h3>
        <h3 class='font-extrabold text-7xl sm:text-9xl text-center my-12'>
          Meets<span class='text-primary'>.</span>
        </h3>
        <h3
          class='font-extrabold text-7xl sm:text-9xl text-center sm:text-right'
        >
          ML + AI<span class='text-primary'>.</span>
        </h3>
      </div>
    </section>
    <section class='lg:py-36 py-24' id='services'>
