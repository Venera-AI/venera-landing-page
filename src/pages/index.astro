---
import { Image } from 'astro:assets';
import logo from '@/images/logo.png';
import aboutBg from '@/images/about-background.png';
import professionals from '@/images/professionals.png';
import patients from '@/images/patients.png';
import publicSector from '@/images/public-sector.png';
import feature1 from '@/images/feature-1.png';
import feature2 from '@/images/feature-2.png';
import feature3 from '@/images/feature-3.png';

import '@/styles/globals.css';
import MenuItems from '@/components/MenuItems.astro';
import { Flag, Folder, Mail } from 'lucide-react';
import SectionHeader from '@/components/SectionHeader.astro';
import Section from '@/components/Section.astro';
import Feature1Content from '@/components/Feature1Content.astro';
import Feature3Content from '@/components/Feature3Content.astro';

const leftNavs = [
  {
    label: 'services',
    href: '/#services',
  },
  {
    label: 'features',
    href: '/#features',
  },
];
const rightNavs = [
  {
    label: 'about us',
    href: '/#about-us',
  },
  {
    label: 'contact',
    href: '/#contact',
  },
];

const mainNavs = [
  {
    label: 'homepage',
    href: '/',
  },
  ...leftNavs,
  ...rightNavs,
];

const audiences = [
  {
    icon: professionals,
    bg: 'bg-[#FFF1F2]',
    borderColor: 'border-[#FB7185]',
    title: 'Professionals',
    description:
      'We reduce workload and leverage information resource, increasing the effectiveness of the diagnosis process.',
  },
  {
    icon: patients,
    bg: 'bg-[#EFF6FF]',
    borderColor: 'border-[#60A5FA]',
    title: 'Patients',
    description:
      'We manage electronic health records and provide personalized insights.',
  },
  {
    icon: publicSector,
    bg: 'bg-[#FAF5FF]',
    borderColor: 'border-[#A855F7]',
    title: 'Public Sector',
    description:
      'We detect anomalies in public health and track down the root cause.',
  },
];

const features = [
  {
    image: feature1,
    title: 'Medical AI Dashboard',
    subtitle:
      'Web application to automate medical data processing and medical insights extracting.',
    content: Feature1Content,
  },
  {
    image: feature2,
    title: 'Electronic Health Companion',
    subtitle:
      'Mobile application to standardize and manage your electronic health record and personalize healthcare experience.',
  },
  {
    image: feature3,
    title: 'Public Health Monitor',
    subtitle:
      'Command center dashboard to detect anomalies and track down root cause.',
    content: Feature3Content,
  },
];
---

<!doctype html>
<html lang='en' class='scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <link rel='icon' type='image/x-icon' href='favicon-main.svg' />
    <title>SafeRX | Healthcare with AI</title>
    <meta
      name='description'
      content='Significantly reduce prescription errors with the power of AI and large language models.'
    />
  </head>
  <body class='bg-white text-gray-900 font-light'>
    <nav
      class='z-10 flex items-center justify-between bg-background fixed top-3 left-1/2 -translate-x-1/2 rounded-xl px-6 py-3 w-[98%]'
    >
      <MenuItems items={leftNavs} />
      <a href='/'>
        <Image src={logo} alt='Logo' class='w-14 h-14' />
      </a>
      <MenuItems items={rightNavs} />
    </nav>
    <header class='h-screen bg-primary relative text-white'>
      <div
        class='container relative h-2/3 top-1/2 -translate-y-1/2 text-white grid grid-cols-2'
      >
        <div class='relative'>
          <div class='relative left-0 top-1/2 -translate-y-1/2'>
            <ul
              class='font-bold text-6xl capitalize flex flex-col gap-y-12 text-blue-300'
            >
              {
                mainNavs.map((item) => {
                  if (item.href === '/') {
                    return (
                      <li class='text-white'>
                        <span>&#8729; </span>
                        <a href={item.href}>{item.label} </a>
                      </li>
                    );
                  }
                  return (
                    <li class='hover:text-white'>
                      <a href={item.href}>{item.label} </a>
                    </li>
                  );
                })
              }
            </ul>
          </div>
        </div>
        <div class='relative font-thin'>
          <div class='absolute top-0 left-0 w-60 text-lg'>
            <div class='flex items-center justify-start gap-x-2 font-bold mb-3'>
              <Flag />
              <p>Our Mission</p>
            </div>
            <p>
              Venera AI is an end-to-end modernized software solution to improve
              healthcare system.
            </p>
          </div>
          <div class='absolute bottom-0 left-0 w-60 text-lg'>
            <div class='flex items-center justify-start gap-x-2 font-bold mb-3'>
              <Mail />
              <p>Our Contact Info</p>
            </div>
            <div>
              <p>4008 Murray Ave,</p>
              <p>Pittsburgh, PA</p>
              <p>+541-908-9436</p>
            </div>
          </div>
          <div
            class='absolute bottom-1/2 -translate-x-1/2 right-0 w-60 text-lg'
          >
            <div class='flex items-center justify-start gap-x-2 font-bold mb-3'>
              <Folder />
              <p>Our Resources</p>
            </div>
            <ul>
              <li><a href='/'>Blog Posts</a></li>
              <li><a href='/'>Whitepapers</a></li>
            </ul>
          </div>
        </div>
      </div>
      <p class='absolute bottom-8 left-8'>
        Â© 2024 SafeRX / Venera AI | VIAI | All rights reserved
      </p>
    </header>
    <section class='h-screen relative'>
      <Image src={aboutBg} alt='random' class='absolute bottom-0 left-0' />
      <Image
        src={aboutBg}
        alt='random'
        class='absolute top-0 right-0 rotate-180'
      />
      <div
        class='container absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2'
      >
        <h3
          class='font-extrabold text-7xl sm:text-9xl text-center sm:text-left'
        >
          Health <span class='text-primary'>.</span>
        </h3>
        <h3 class='font-extrabold text-7xl sm:text-9xl text-center my-12'>
          Meets<span class='text-primary'>.</span>
        </h3>
        <h3
          class='font-extrabold text-7xl sm:text-9xl text-center sm:text-right'
        >
          ML + AI<span class='text-primary'>.</span>
        </h3>
      </div>
    </section>
    <section class='lg:py-36 py-24'>
      <div class='container'>
        <div
          class='flex md:items-center justify-between xl:gap-x-36 gap-x-16 flex-col md:flex-row items-start gap-y-4'
        >
          <div class='text-nowrap whitespace-nowrap'>
            <div class='flex items-center gap-x-2 text-2xl font-bold'>
              <span class='text-primary'>&#8729; </span>
              <h3>Our Commitment</h3>
            </div>
            <h2 class='font-extrabold text-5xl mt-4'>Who We Serve</h2>
          </div>
          <p class='text-xl font-extralight'>
            We're committed to improving patient outcomes and reducing the
            burden on healthcare providers through the seamless integration of
            intelligent automation and data-driven insights.
          </p>
        </div>
        <div
          class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-5 xl:gap-x-12 lg:mt-20 mt-9 gap-y-12'
        >
          {
            audiences.map((audience) => {
              return (
                <div class='bg-[#F1F5F9] rounded-lg md:p-5 p-3 flex flex-col gap-y-5 pb-8'>
                  <div
                    class={`${audience.bg} ${audience.borderColor} flex items-center justify-center border rounded-lg aspect-square `}
                  >
                    <Image src={audience.icon} alt={audience.title} />
                  </div>
                  <h6 class='font-extrabold text-2xl'>{audience.title}</h6>
                  <p class='font-extralight text-lg'>{audience.description}</p>
                </div>
              );
            })
          }
        </div>
      </div>
    </section>
    <Section>
      <SectionHeader extraClasses='text-center'>Our Core Features</SectionHeader
      >
      <div class='mt-28 flex flex-col lg:gap-y-24 gap-y-24 items-center'>
        {
          features.map((feature) => {
            return (
              <div class='grid md:grid-cols-2 grid-cols-1 lg:gap-x-32 gap-y-8 gap-x-16 group/feature items-center w-full sm:w-5/6 md:w-full'>
                <Image
                  src={feature.image}
                  alt={feature.title}
                  class='w-full md:group-even/feature:order-1'
                />
                <div class='md:group-even/feature:-order-1 flex flex-col justify-center'>
                  <div class='lg:w-5/6 w-full flex flex-col gap-y-4 md:gap-y-6'>
                    <h6 class='font-extrabold text-4xl'>{feature.title}</h6>
                    <p class='text-lg text-[#475569]'>{feature.subtitle}</p>
                    {feature.content && <feature.content />}
                  </div>
                </div>
              </div>
            );
          })
        }
      </div>
    </Section>
  </body>

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
  </style>

  <script>
    document.querySelector('.mobile-nav-btn')?.addEventListener('click', () => {
      document.querySelector('.nav-bar')?.classList.toggle('translate-x-0');
    });

    const menuItems = document.querySelectorAll('.menu-item');
    for (const menuItem of menuItems) {
      menuItem.addEventListener('click', () => {
        if (
          document
            .querySelector('.nav-bar')
            ?.classList.contains('-translate-x-full')
        ) {
          document.querySelector('.nav-bar')?.classList.remove('translate-x-0');
        }
      });
    }
  </script>
</html>
