          <Progress value={87} className='h-1 ' />
          <div
            class='absolute left-0 top-1/2 rounded-md -translate-y-1/2 w-6 h-6 bg-primary'
          >
            <div
              class='bg-white h-2 w-2 left-1/2 top-1/2 absolute -translate-x-1/2 -translate-y-1/2 rounded-sm'
            >
            </div>
          </div>
          <div
            class='absolute left-1/3 top-1/2 rounded-md -translate-y-1/2 w-6 h-6 bg-primary'
          >
            <div
              class='bg-white h-2 w-2 left-1/2 top-1/2 absolute -translate-x-1/2 -translate-y-1/2 rounded-sm'
            >
            </div>
          </div>
          <div
            class='absolute left-2/3 top-1/2 rounded-md -translate-y-1/2 w-6 h-6 bg-primary'
          >
            <div
              class='bg-white h-2 w-2 left-1/2 top-1/2 absolute -translate-x-1/2 -translate-y-1/2 rounded-sm'
            >
            </div>
          </div>
          <div
            class='absolute right-0 top-1/2 rounded-md -translate-y-1/2 w-6 h-6 border-gray-400 border'
          >
            <div
              class='bg-gray-200 h-2 w-2 left-1/2 top-1/2 absolute -translate-x-1/2 -translate-y-1/2 rounded-sm'
            >
            </div>
          </div>
          <div
            class='absolute top-4 left-2 -translate-x-1/2 flex flex-col items-center w-[225px]'
          >
            <p class='font-extrabold'>User Input</p>
            <p>Receive personalized health insight</p>
          </div>
          <div
            class='absolute bottom-4 lg:top-4 left-1/3 -translate-x-1/2 flex flex-col items-center w-[225px]'
          >
            <p class='font-extrabold'>AI Algorithm</p>
            <p>Analyze input & Metrics</p>
          </div>
          <div
            class='absolute top-4 left-2/3 -translate-x-1/2 flex flex-col items-center w-[225px]'
          >
            <p class='font-extrabold'>AI Recommendation</p>
            <p>Receive personalized health</p>
          </div>

          <div
            class='absolute bottom-4 lg:top-4 right-2 translate-x-1/2 flex flex-col items-center w-[225px]'
          >
            <p class='font-extrabold'>Iterative Improvement</p>
            <p>The AI learns from user interactions</p>
          </div>
        </div>

        <div class='relative w-full sm:w-[80%] mt-12 md:hidden block text-left'>
          <div
            class='bg-secondary h-[80%] w-1 absolute top-1/2 -translate-y-1/2 left-2.5'
